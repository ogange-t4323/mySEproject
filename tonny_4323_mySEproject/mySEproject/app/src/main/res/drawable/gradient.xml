<?xml version="1.0" encoding="utf-8"?>

<!-- indicates what shape to fill a gradient -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- the angle of the gradient is used only with linear type.
    It sets the direction of the gradient eg if angle 180 start oolor right and end
    color left and is a multiple of 45.
    Linear gradient is default gradient-->

    <gradient
        android:angle="360"
        android:type="linear"
        android:startColor="@color/ceruleanBlue"
        android:endColor="@color/skyBlue"/>

</shape>